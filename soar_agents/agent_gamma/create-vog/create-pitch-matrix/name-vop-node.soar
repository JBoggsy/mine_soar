sp {create-pitch-matrix*propose*name-vop-node
   (state <s> ^name create-pitch-matrix
              ^top-state.svs.vsm.vog.node <node>)
   (<node> -^node-name)
   (<node>  ^node-id <node-id>
            ^op-name <> save-to-file)
-->
   (<s> ^operator <op> + =)
   (<op> ^name name-vop-node
         ^node-id <node-id>
         ^node-name |pitch matrix|)
}

